
; Polybar configuration

[colors]

foreground = ${xrdb:color7}
background = ${xrdb:color0}
black1 = ${xrdb:color0}
black2 = ${xrdb:color8}

red1 = ${xrdb:color1}
red2 = ${xrdb:color9}

white = ${xrdb:color7}

[bar/nico]

monitor = eDP1

bottom = false

fixed-center = true

width = 100%
height = 19


background = ${colors.background}
foreground = ${colors.foreground}

radius = 0.0

modules-left = i3 filesystem
modules-center = xwindow
modules-right = network cpu memory date 

; tray-position = right
; tray-padding = 5

font-0 = "Inconsolata:size=10"

; line-size = 2
; line-color = #ffffff

; MODULES

[module/i3]

type = internal/i3

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 1
label-mode-background = ${xrdb:color8}

label-focused = %name%
label-focused-foreground = ${xrdb:color2}
label-focused-background = 
label-focused-underline = ${xrdb:color2}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-padding = 1

label-visible = %name%
label-visible-underline = #555555
label-visible-padding = 1

label-urgent = %name%
label-urgent-foreground = ${xrdb:color0}
label-urgent-background = ${xrdb:color9}
label-urgent-padding = 1

[module/xwindow]

type = internal/xwindow
label-maxlen = 50

[module/cpu]

type = internal/cpu

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label>
format-foreground = ${xrdb:color1}
format-underline = ${xrdb:color1}
format-padding = 1

; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = CPU:%percentage%%

ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/date]

type = internal/date

interval = 10.0

date = %m-%d%
time = %H:%M

label = %date% %time%
format-padding = 1
format-foreground = ${xrdb:color14}
format-underline = ${xrdb:color2}

[module/battery]

type = internal/battery

label-charging = BAT:%percentage%%
format-charging-underline = ${xrdb:color2}

label-discharging = BAT:%percentage%%
; format-discharging-underline = ${xrdb:color1}

label-full = BAT:%percentage%%
; format-full-underline = ${xrdb:color4}

full-at = 99

battery = BAT0
adapter = AC

[module/filesystem]
type = internal/fs
mount-0 = /
fixed-values = true
format-mounted = <label-mounted>
format-unmounted = <label-mounted>
label-mounted = %mountpoint:% %percentage_free%%
label-mounted-foreground = ${xrdb:color4}

[module/memory]
type = internal/memory
; format = <label> <bar_used>

label = RAM:%percentage_used%%
label-foreground = ${xrdb:color3}
;bar-used-indicator =
;bar-used-width = 50
;bar-used-foreground-0 = #55aa55
;bar-used-foreground-1 = #557755
;bar-used-foreground-2 = #f5a70a
;bar-used-foreground-3 = #ff5555
;bar-used-fill = ▐
;bar-used-empty = ▐
;bar-used-empty-foreground = #444444
 
[module/network]

type = internal/network
interface = wlp2s0 
format-connected = <label-connected>
label-connected = NET:%essid%%downspeed:9%
label-connected-foreground = ${xrdb:color8}
